{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "env": {
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": 0,
    "space-before-function-paren": 0,
    "semi": ["error", "always"],
    "react/jsx-indent": ["error", 4],
    "react/jsx-indent-props": ["error", 4],
    "indent": ["error", 4],
    "react/jsx-boolean-value": 0,
    "react/prop-types": ["error", { "ignore": ["onVerifyState", "stripeTerminal"] }]
  }
}
